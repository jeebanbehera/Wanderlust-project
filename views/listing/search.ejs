<% layout('layouts/boilerplate') -%>

<style>
      .nothing-found{
        margin: auto;
        /* background-color: red; */
        /* color: white; */
        border-radius: 10px;
        text-align: center;
      }
      .nothing-found h2{
        text-shadow: 2px 2px rgb(255, 38, 0);
      }
</style>


  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% let found = false; %>
    <% for(listing of allListings){ %>
      <% if(listing.title.toLowerCase().includes(searchVal.toLowerCase())||
        listing.category.toLowerCase().includes(searchVal.toLowerCase())||
        listing.description.toLowerCase().includes(searchVal.toLowerCase())||
        typeof searchVal === "number" && listing.price <= searchVal ||
        listing.location.toLowerCase().includes(searchVal.toLowerCase())||
        listing.country.toLowerCase().includes(searchVal.toLowerCase()) 
      ){%>
        <% found = true; %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card col listing-card">
            <img src="<%=listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%=listing.title%>
                </b>
                <br>
                &#8377;<%= typeof listing.price==="number" ? listing.price.toLocaleString("en-IN") : listing.price %>/
                  Night
                  <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
        <% }  %>
          <% } %>
          
          <% if(! found){%>
             <div class="nothing-found">
              <h2 >Nothing Found !</h2>
              </div>
        <% }%>
  </div>